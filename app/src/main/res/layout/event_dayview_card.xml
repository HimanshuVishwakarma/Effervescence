        </LinearLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:id="@+id/location"
            android:src="@drawable/location_material_icon"
            android:layout_below="@+id/dropdown_ll"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Venue"
            android:id="@+id/location_tv"
            android:layout_below="@+id/dropdown_ll"
            android:layout_toRightOf="@+id/location"
            android:layout_marginTop="11dp" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:id="@+id/time"
            android:src="@drawable/clock_material"
            android:layout_below="@+id/dropdown_ll"
            android:layout_alignRight="@+id/location_tv"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/time_tv"
            android:layout_below="@+id/dropdown_ll"
            android:layout_toRightOf="@+id/time"
            android:layout_marginTop="11dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="Sample Event"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/paintbg"
            android:textColor="@color/md_red_50"
            android:id="@+id/event_title_tv"
            android:layout_above="@+id/dropdown_ll"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

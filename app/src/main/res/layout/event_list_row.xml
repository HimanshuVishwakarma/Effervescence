<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:paddingLeft="15dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/index"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical"
            android:id="@+id/bgImage"
            android:background="@drawable/singer"
            android:weightSum="1">
            <TextView
                android:background="@drawable/strip"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:paddingRight="30dp"
                android:paddingLeft="0dp"
                android:layout_width="287dp"
                android:layout_height="28dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Today Related to 1 popular artist"
                android:id="@+id/day" />

            <TextView
                android:layout_marginTop="40dp"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Parallel World: A New Rock Music Experience"
                android:id="@+id/title"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/time"/>
                <TextView
                    android:paddingLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Today @ 8:00 PM"
                    android:id="@+id/time"
                    android:textColor="#ffffff" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/location"/>
                <TextView
                    android:paddingLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Complete Actors Place"
                    android:id="@+id/place"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/roundedbg">
            <TextView
                android:layout_width="wrap_content"
                android:text="Rock and Roll"
                android:layout_weight="0.8"
                android:textAlignment="center"
                android:textSize="16dp"
                android:id="@+id/category1"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="5dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Music"
                android:layout_weight="0.8"
                android:id="@+id/category2"
                android:textAlignment="center"
                android:layout_marginTop="27dp"
                android:background="@color/title"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/reminder"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/share"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>